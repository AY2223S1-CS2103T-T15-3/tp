<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="100" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      <HBox spacing="8">
        <Label fx:id="module" styleClass="cell_module_label" text="\$module" />
        <FlowPane fx:id="tags"/>
      </HBox>
      <HBox spacing="15">
        <Label fx:id="year" styleClass="cell_small_label" text="\$year" />
        <Label fx:id="studentId" styleClass="cell_small_label" text="\$studentId" />
      </HBox>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="comment" styleClass="cell_small_label" text="\$comment" />
    </VBox>
  </GridPane>
</HBox>
