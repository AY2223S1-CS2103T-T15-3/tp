@startuml
!include style.puml

box Ui UI_COLOR_T1
participant ":MainWindow" as MainWindow LOGIC_COLOR
participant ":TutorDetailsPanel" as TutorDetailsPanel LOGIC_COLOR
end box

box Logic LOGIC_COLOR_T1
participant ":Logic" as Logic LOGIC_COLOR
participant ":ViewCommand" as ViewCommand LOGIC_COLOR
participant "result:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> MainWindow : executeCommand("view 1")
activate MainWindow

MainWindow -> Logic : execute("view 1")
activate Logic

create ViewCommand
Logic -> ViewCommand
activate ViewCommand

ViewCommand -> Model : setTutorToView(tutorToView)
activate Model

Model --> ViewCommand
deactivate Model

create CommandResult
ViewCommand -> CommandResult
activate CommandResult

CommandResult --> ViewCommand
deactivate CommandResult

ViewCommand --> Logic : result
deactivate ViewCommand

Logic --> MainWindow : result
deactivate Logic

MainWindow --> CommandResult : isView()
activate CommandResult

CommandResult --> MainWindow : true
deactivate CommandResult
destroy CommandResult

MainWindow -> Logic : getTutorToView()
activate Logic

Logic -> Model : getTutorToView()
activate Model

Model --> Logic : tutorToView
deactivate Model

Logic -> MainWindow : tutorToView
deactivate Logic

MainWindow --> MainWindow : handleView(tutorToView)
activate MainWindow

create TutorDetailsPanel
MainWindow --> TutorDetailsPanel : tutorToView
activate TutorDetailsPanel

TutorDetailsPanel --> MainWindow
deactivate TutorDetailsPanel

MainWindow --> MainWindow
deactivate MainWindow
[<- MainWindow
@enduml